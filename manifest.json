{
  "manifest_version": 3,
  "name": "ZenTab Performance Monitor",
  "version": "1.0",
  "description": "Monitor, manage, and optimize browser performance by suspending inactive tabs.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Performance Monitor",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module" 
  },
  "permissions": [
    "tabs",        
    "storage",     
    "system.memory",
    "processes"     
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}